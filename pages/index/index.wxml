<view class='month flex m-center'>
    <view class='prev' bindtap='prevMonth'>《</view>
    <view>
        <picker mode="date" value="{{date}}" start="2015-09" end="2020-09" fields='month' bindchange="bindDateChange">
        <view>
            {{date}}
        </view>
        </picker>
    </view>
    <view class='next' bindtap='nextMonth'>》</view>
</view>
<view class='calendar flex column s-center'>
    <view class='week-row flex m-around'>
        <view class='grid' wx:for="{{week}}" wx:key='item'>{{item}}</view>
    </view>
    <swiper class='swpier-box' circular="true" current="{{swiperIndex}}" bindchange='swiperChange'>
        <swiper-item class='flex m-around days-table '>
            <view wx:for="{{calendar.first}}" wx:for-item='day' wx:key='day.date'
                class='grid {{day.month === month?"":"notCurrent"}} {{day.date === today?"today":""}}' 
                data-month='{{day.month}}' bindtap='bindDayTap'
                >{{day.date === today?'今天':day.day}}
            </view>
        </swiper-item>
        <swiper-item class='flex m-around days-table '>
            <view wx:for="{{calendar.second}}" wx:for-item='day' wx:key='day.date'
                class='grid {{day.month === month?"":"notCurrent"}} {{day.date === today?"today":""}}' 
                data-month='{{day.month}}' bindtap='bindDayTap'
                >{{day.date === today?'今天':day.day}}
            </view>
        </swiper-item>
        <swiper-item class='flex m-around days-table '>
            <view wx:for="{{calendar.third}}" wx:for-item='day' wx:key='day.date'
                class='grid {{day.month === month?"":"notCurrent"}} {{day.date === today?"today":""}}' 
                data-month='{{day.month}}' bindtap='bindDayTap'
                >{{day.date === today?'今天':day.day}}
            </view>
        </swiper-item>
        <swiper-item class='flex m-around days-table '>
            <view wx:for="{{calendar.fourth}}" wx:for-item='day' wx:key='day.date'
                class='grid {{day.month === month?"":"notCurrent"}} {{day.date === today?"today":""}}' 
                data-month='{{day.month}}' bindtap='bindDayTap'
                >{{day.date === today?'今天':day.day}}
            </view>
        </swiper-item>
    </swiper>
</view>
